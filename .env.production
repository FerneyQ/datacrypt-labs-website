# ===== API CONFIGURATION =====
API_TITLE=DataCrypt Labs API
API_VERSION=1.0.0
API_DESCRIPTION=Business Intelligence & Data Science API
API_HOST=0.0.0.0
API_PORT=8000

# ===== SECURITY =====
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===== DATABASE =====
DATABASE_URL=sqlite:///./datacrypt_production.db
DB_BACKUP_PATH=./backups/
DB_BACKUP_INTERVAL=86400  # 24 hours in seconds

# ===== CORS SETTINGS =====
# Add your domain here for production
ALLOWED_ORIGINS=["https://datacrypt-labs.com", "https://www.datacrypt-labs.com", "http://localhost:3000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=./logs/datacrypt_api.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ===== PERFORMANCE =====
WORKERS=4
TIMEOUT=60
KEEPALIVE=2

# ===== ANALYTICS =====
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===== GAME CONFIGURATION =====
GAME_MAX_SCORE=100000
GAME_LEADERBOARD_SIZE=100
GAME_STATS_CACHE_TTL=300  # 5 minutes

# ===== PRODUCTION FEATURES =====
DEBUG=false
TESTING=false
PRODUCTION=true
ENABLE_DOCS=true
ENABLE_REDOC=true

# ===== MONITORING =====
HEALTH_CHECK_INTERVAL=300  # 5 minutes
METRICS_ENABLED=true
PROMETHEUS_ENABLED=false

# ===== SSL/TLS =====
SSL_KEYFILE=./ssl/private.key
SSL_CERTFILE=./ssl/certificate.crt
SSL_CA_CERTS=./ssl/ca_bundle.crt