{
    "version": 2,
    "name": "datacrypt-labs-website",
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/admin(.*)",
            "dest": "api/main.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "api/main.py"
        },
        {
            "src": "/health",
            "dest": "api/main.py"
        },
        {
            "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg))",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/main.py"
        }
    ],
    "env": {
        "PYTHONPATH": "./",
        "PRODUCTION": "true"
    },
    "functions": {
        "api/main.py": {
            "maxDuration": 30
        }
    }
}