# DataCrypt Labs - Archivo .htaccess para Apache

# ===============================
# HEADERS DE SEGURIDAD HTTP
# ===============================

<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options DENY
    
    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options nosniff
    
    # Protecci√≥n XSS
    Header always set X-XSS-Protection "1; mode=block"
    
    # Pol√≠tica de referrer
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:; frame-ancestors 'none';"
    
    # Permissions Policy
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=()"
    
    # HSTS (HTTP Strict Transport Security)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Prevenir informaci√≥n del servidor
    Header unset Server
    Header unset X-Powered-By
    Header always set X-Content-Type-Options nosniff
</IfModule>

# ===============================
# FORZAR HTTPS
# ===============================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Forzar HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Remover www si existe
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [R=301,L]
</IfModule>

# ===============================
# PROTECCI√ìN DE ARCHIVOS
# ===============================

# Denegar acceso a archivos sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger archivos de configuraci√≥n
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteger archivos del sistema
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# ===============================
# PREVENIR HOTLINKING
# ===============================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Prevenir hotlinking de im√°genes
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https://(www\.)?ferneyq\.github\.io [NC]
    RewriteCond %{HTTP_REFERER} !^https://(www\.)?github\.com [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp|svg)$ - [NC,F,L]
    
    # Prevenir hotlinking de archivos CSS y JS
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https://(www\.)?ferneyq\.github\.io [NC]
    RewriteRule \.(css|js)$ - [NC,F,L]
</IfModule>

# ===============================
# RATE LIMITING Y ANTI-DDOS
# ===============================

<IfModule mod_evasive24.c>
    DOSHashTableSize    2048
    DOSPageCount        5
    DOSPageInterval     1
    DOSSiteCount        50
    DOSSiteInterval     1
    DOSBlockingPeriod   600
</IfModule>

# ===============================
# CONFIGURACI√ìN DE CACH√â
# ===============================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Cach√© para im√°genes
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Cach√© para CSS y JS
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Cach√© para fuentes
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML sin cach√©
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ===============================
# COMPRESI√ìN GZIP
# ===============================

<IfModule mod_deflate.c>
    # Comprimir archivos de texto
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE text/javascript
</IfModule>

# ===============================
# PREVENIR ATAQUES DE INYECCI√ìN
# ===============================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Bloquear ataques SQL injection
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} \b(union|select|insert|delete|drop|update|cast|create|char|convert|alter|declare|exec|script)\b [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Bloquear ataques XSS
    RewriteCond %{QUERY_STRING} (\<|%3C).*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} (javascript:|vbscript:|onmouseover=|onload=) [NC,OR]
    RewriteCond %{QUERY_STRING} (<script|</script|<iframe|</iframe) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Bloquear intentos de directory traversal
    RewriteCond %{QUERY_STRING} \.\./\.\. [OR]
    RewriteCond %{QUERY_STRING} (^|&|\?)(\.|%2E){2}($|&|/) [OR]
    RewriteCond %{REQUEST_URI} \.\./\.\. [OR]
    RewriteCond %{REQUEST_URI} (^|/)(\.|%2E){2}($|/)
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# ===============================
# BLOQUEAR USER AGENTS MALICIOSOS
# ===============================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Bloquear bots maliciosos
    RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|curl|scan|java|winhttp|clshttp|loader) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (%0A|%0D|%27|%3C|%3E|%00) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (;|<|>|'|"|\)|\(|%0A|%0D|%22|%27|%28|%3C|%3E|%00).*(libwww-perl|wget|python|nikto|curl|scan|java|winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner) [NC]
    RewriteRule .* - [F]
    
    # Bloquear referers vac√≠os para ciertos archivos
    RewriteCond %{HTTP_REFERER} ^$
    RewriteCond %{REQUEST_URI} !^/(robots\.txt|favicon\.ico|sitemap\.xml)$ [NC]
    RewriteCond %{REQUEST_METHOD} =GET
    RewriteRule \.(zip|rar|7z|tar|gz|exe|msi|dmg|pkg)$ - [F]
</IfModule>

# ===============================
# CONFIGURACI√ìN ADICIONAL
# ===============================

# Desactivar la firma del servidor
ServerTokens Prod

# Desactivar √≠ndices de directorios
Options -Indexes

# Configurar p√°gina de error personalizada
ErrorDocument 403 /403.html
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# L√≠mite de tama√±o de archivo subido
LimitRequestBody 10485760

# Configurar charset por defecto
AddDefaultCharset UTF-8

# ===============================
# MONITOREO Y LOGGING
# ===============================

<IfModule mod_log_config.c>
    # Log personalizado para seguridad
    LogFormat "%h %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\" %D" security
    CustomLog logs/security.log security
</IfModule>

